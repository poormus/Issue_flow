<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textStyle="bold"
            android:id="@+id/tvTitle"
            android:textSize="25sp"
            android:text="Report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/viewDivider"
            android:layout_below="@id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:text="Sexual content"
            android:id="@+id/rb1"
            android:layout_below="@id/viewDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatRadioButton
            android:text="violent or repulsive content"
            android:id="@+id/rb2"
            android:layout_below="@id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatRadioButton
            android:text="Racist or hateful content"
            android:id="@+id/rb3"
            android:layout_below="@id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatRadioButton
            android:text="Spam or misleading"
            android:id="@+id/rb4"
            android:layout_below="@id/rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:enabled="false"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:text="REPORT"
            android:id="@+id/btReportIssue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/rb4"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>